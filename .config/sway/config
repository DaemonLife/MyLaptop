    # color profile "~/Pictures/LEN140WUXGA+ #1 2023-03-29 00-05 120cdm2 D6500 2.2 M-S XYZLUT+MTX.icm"
    bg ~/Pictures/wallpaper.png fill
    # bg #121212 solid_color
