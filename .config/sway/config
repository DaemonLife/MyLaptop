# Config for sway

### start applications ###
bar {
    swaybar_command waybar
}
exec systemctl --user import-environment
exec libinput-gestures-setup start
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec udiskie -a -n #-t
exec wl-paste -t TEXT
exec mako
exec MOZ_ENABLE_WAYLAND=1
# xwayland disable

font pango:jetbrains mono 16

default_floating_border none

# idki
client.focused          #0087af #0087af #0087af #0087af   
client.focused_inactive #0087af #0087af #0087af #0087af
client.unfocused        #121212 #121212 #121212 #121212

client.urgent           #121212 #121212 #121212 #121212

# Logo key. Use Mod1 for Alt.
set $mod Mod4

smart_borders on
default_border pixel 2
default_floating_border none

# msk - - - - - - -
# output eDP-1 pos 0 0 scale 1.25 pos 1920 300 res 2240x1400@60.002Hz adaptive_sync on render_bit_depth 10
